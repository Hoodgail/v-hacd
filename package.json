{
  "name": "vhacd-js",
  "version": "0.0.1",
  "description": "JavaScript API for V-HACD",
  "module": "lib/vhacd.js",
  "type": "module",
  "typings": "lib/vhacd-js",
  "license": "BSD 3-Clause License",
  "repository": {
    "type": "git",
    "url": "https://github.com/pmconne/v-hacd-js"
  },
  "scripts": {
    "build:wasm": "mkdir -p lib && emcc -lembind -o lib/vhacd-wasm.js -sALLOW_MEMORY_GROWTH -sSINGLE_FILE=1 cpp/vhacd.cpp -sMODULARIZE -s 'EXPORT_NAME=\"instantiateModule\"'",
    "build:wasm:optimized": "mkdir -p lib && emcc -lembind -o lib/vhacd-wasm.js -sALLOW_MEMORY_GROWTH -sSINGLE_FILE=1 cpp/vhacd.cpp -sMODULARIZE -s 'EXPORT_NAME=\"instantiateModule\"' -Oz",
    "build:ts": "tsc 1>&2 --outDir lib",
    "build": "npm run build:wasm && npm run build:ts",
    "build:optimized": "npm run build:wasm:optimized && npm run build:ts",
    "clean": "rimraf lib"
  },
  "keywords": [
    "convex",
    "hull",
    "vhacd",
    "v-hacd",
    "mesh",
    "decomposition"
  ],
  "author": {
    "name": "Paul Connelly",
    "url": "https://github.com/pmconne"
  },
  "devDependencies": {
    "@types/emscripten": "^1.39.6",
    "typescript": "~4.4.0",
    "rimraf": "^3.0.2"
  },
  "dependencies": {}
}
